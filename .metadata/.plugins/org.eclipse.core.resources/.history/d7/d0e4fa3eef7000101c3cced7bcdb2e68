package myproject01;

public class exam04 {

	public static void main(String[] args) {
		String str1 = "150709639056372019519726683924970621116630067374652717335303386823554014655859362705";
		System.out.println("str1.length : " + str1.length());
		StringBuilder sb = new StringBuilder(str1);
		int n = str1.length();
		while(n -3 < 0 ) {
			System.out.println(sb.insert(n, ","));
			System.out.println(sb.toString());
		}
//		System.out.println(sb.insert(5, ','));
	}

}
